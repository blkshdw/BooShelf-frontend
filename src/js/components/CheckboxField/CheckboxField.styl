.checkbox-field {
    cursor: pointer;
    
    .check {
        position: relative;
        width: 21px;
        height: 21px;
        border: 1px solid #c7c7c7;
        border-radius: 3px;
        background: #fff;

        .icon {
            position: absolute;
            left: 3px;
            top: 5px;
        }
    }

    .title {
        line-height: 21px;
        font-size: 14px;
        margin-left: 8px;
    }
}
