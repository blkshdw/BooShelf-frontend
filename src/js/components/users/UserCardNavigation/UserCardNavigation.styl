:local .usercard-navigation {
  width: 230px;
}

:local .nav-but {
  flex: 0 1 auto;
  height: 40px;
}

:local .main-menu a {
  display: block;
  font-size: 13px;
  font-weight: 500;
  color: #999;
  padding: 4px 20px;

}
:local .active a {
  color: darkmagenta;
  border-left: 1px solid #11427D;
}

:local .main-menu a:hover {
  color: #11427D;
  text-decoration: none;
  background-color: transparent;
  border-left: 1px solid #11427D;
}

:local .sub-menu a {
  padding-top: 1px;
  padding-bottom: 1px;
  padding-left: 30px;
  font-size: 12px;
  font-weight: 400;
}