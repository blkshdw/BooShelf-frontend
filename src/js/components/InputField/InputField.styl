:local .input-field {
    position: relative;
    border-bottom: 1px solid #d0d0d0;
    padding-bottom: 3px;
    padding-top: 9px;
    margin: 10px 0 5px 0;
    height: 34px;
    
    .input {
        margin-top: 4px;
        border: none;
        outline: none;
        background: none;
        padding: 0;
        width: 100%;
        font-size: 14px;
        color: #000;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-family: "Roboto", Arial, Verdana, sans-serif;
    }

    .label {
        position: absolute;
        font-size: 10px;
        left: 0;
        font-weight: 400;
        transition: opacity 0.2s linear;
    }

    .input:invalid + .label {
        top: 3px;
        opacity: 0;
    }

    .input:valid + .label {
        top: -5px;
        opacity: 1;
    }

    .input:focus + .label {
        color:#00b6f1;
    }

    &_button {
        padding: 0 12px;
        position: absolute;
        bottom: 7px;
        right: 0;
        text-align: center;
        height: 35px;
        font-weight: normal;
        color: #fff !important;
        background: #97d583;
        line-height: 36px;
        border-radius: 4px;
        font-size: 14px;
        z-index: 3;
        animation-duration: 1.5s;
        animation-iteration-count: infinite;
        animation-timing-function: linear;
        animation-delay: 2s;

        &:hover {
            opacity: 0.8;
        }
    }
}
