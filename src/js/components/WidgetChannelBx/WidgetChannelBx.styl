:local .channel {
    display: flex;
    flex-direction: column;
    border-radius: 0.375rem;
    border: 0.125rem solid #ddd;
    margin-right: 2rem;
    margin-bottom: 2rem;
    padding: 1rem;
    width: 25rem;
}

:local .info {
    display: flex;
    flex-direction: row;
}

:local .name {
    display: block;
}

:local .type {
    display: block;
    color: #888;
}

:local .picture {
    width: 48px;
    height: 48px;
}

:local .links {
    margin-left: 1rem;
}

:local .actions {
    margin-top: 1rem;
}